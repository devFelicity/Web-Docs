---
const { name, description, args, optional, example, image } = Astro.props;
---

<span class="command">
  <h3 class="title"><code>/{name}</code></h3>
  <span class="description">{description}</span>

  {
    args && (
      <span class="arguments bold">
        Arguments:
        {args.map((arg: string) => (
          <code class="argument">[{arg}]</code>
        ))}
        {optional && '(optional)'}
      </span>
    )
  }
  {
    example && (
      <span class="example bold">
        Example:
        <code>
          /{name} {example}
        </code>
      </span>
    )
  }

  {
    image && (
      <details>
        <summary>Example image</summary>
        <img src={image} />
      </details>
    )
  }
</span>

<hr />

<style>
  hr {
    border-color: #cdd6f4;
  }

  summary {
    cursor: pointer;
  }

  .command {
    padding-top: 1em;
    padding-bottom: 1em;
    display: flex;
    flex-direction: column;
    gap: 1em;
  }

  .bold {
    font-weight: 700;
  }
</style>
